@page "/"

@if(this.isGameEnded)
{
    <GameResults OnNewGame="@NewGame" GameResult="this.gameResult"/>
}
else
{
    <GameBoard OnGameOver="@GameOver"/>
}

@code
{
    private bool isGameEnded;
    private GameResult gameResult;

    private void GameOver(object gameResult)
    {
        this.gameResult = gameResult as GameResult;
        this.isGameEnded = true;
    }

    private void NewGame()
    {
        this.isGameEnded = false;
    }
}
